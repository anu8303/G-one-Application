<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"

    android:elevation="4dp"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
    >


        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/hospital_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#03a9af"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Apollo Hospital"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hospital_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="178-A Shivkatra Kanpur Uttar Pradesh"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/reserved_bed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Bed Available :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reserved_bed_in_hospital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="30 Beds"
                android:textColor="#FF0000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_bed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reserved_bed"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Total Bed :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_bed_in_hospital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="0 Beds"
                android:textColor="#FF0000"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/total_bed"
            android:id="@+id/contactarean"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <Button
                android:id="@+id/contact_no"
                android:textColor="#ffffff"
                android:background="#03a9af"
                android:layout_marginRight="5dp"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Contact us"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                />
            <Button
                android:id="@+id/direction"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:background="#03a9af"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_baseline_directions_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Direction"
                android:textAllCaps="false"
                android:textSize="20dp"
                />

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView> 
